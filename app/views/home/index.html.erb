<% content_for :top_content do %>
<% if user_signed_in? %>

<div class="container">
  <center><%= link_to 'Add More Adventures!', 'home/new', class: 'btn btn-default btn-lg' %></center>
</div>

<h1>Wish List</h1>
<br>
<div class="container">
  <div class="row">
  <% @monuments.each do |mon| %>
    <div class="col-md-4 grid">
      <img src= <%= mon['image'] %> >
      <p><%= mon['monument_name'] %> | <%= mon['address'] %></p>
      <a href = "home/<%= mon['id'] %>" class='btn btn-default btn-xs' >View/Edit</a>
      <a href = "home/<%= mon['id'] %>" data-method='delete' class='btn btn-default btn-xs'>Delete Trip</a><br>
    </div>
    <% end %>
  </div>
</div>

<!-- not saving anything in visited yet until we add column to monuments table w/ boolean value - added below img for formatting purposes in the meantime -->
<h1>Visited</h1>
<br>
<div class="container grid">
  <div class="row">
    <div class="col-md-4">
      <img src="http://i.imgur.com/KreVNXGm.jpg?3">
      <p>Monument Name</p>
      <p>City</p>
    </div>
  </div>
</div>

<% else %>

<div id="welcome">
  <div class="container welcome-cont">
    <!-- <div class ="welcome"> -->
      <h1>Welcome!</h1>
      <p>Register to get started.</p>
      <p>
        <%= link_to 'Register', new_user_registration_path, class: 'btn btn-default btn-sm' %>
      </p>
    <!-- </div> -->
  </div>
</div>
<% end %>
<% end %>
