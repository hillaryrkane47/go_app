<div class="wrapper">
  <% content_for :top_content do %>
  <% if user_signed_in? %>

  <div class="container">
    <center><%= link_to 'Add More Adventures!', 'home/new', class: 'btn btn-default btn-lg' %></center>
  </div>

  <br><br><br>
  <div class="container">
    <div class="row row-results">
    <% @monuments.each do |mon| %>
      <div class="col-md-4 grid">
        <img src= <%= mon['image'] %> >
        <div class="content">
          <p><%= mon['monument_name'] %> | <%= mon['address'] %></p>
          <a href = "home/<%= mon['id'] %>" class='edit-btn btn btn-default btn-xs' >View/Edit</a>
          <a href = "home/<%= mon['id'] %>" data-method='delete' class='delete-btn btn btn-default btn-xs'>Delete Trip</a><br><br>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<% else %>

<div id="welcome">
  <div class="welcome-cont">
      <h1>Welcome!</h1>
      <p>Register to get started.</p>
      <p>
        <%= link_to 'Register', new_user_registration_path, class: 'btn btn-default btn-sm' %>
      </p>
  </div>
</div>
<% end %>
<% end %>

